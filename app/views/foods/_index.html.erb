<% @foods.each do |food| %>
  <tr>
    <td><%= food.food_category.name %></td>
    <td><%= food.name %></td>
   
    <td>
        <div class="action-buttons">
            <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_food_path(food.uid), title: "Modifier", remote: true %>




<%= link_to raw('<i class="far fa-trash-alt"></i>
'), food_delete_path(food.uid), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
  </tr>
<% end %>