$("ul.errors").html("");
<% if @restaurant_opening_time.errors.any? %>
  <% @restaurant_opening_time.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".restaurant-opening-times").html("<%= escape_javascript(render 'index') %>");
  $("#restaurant-opening-time-modal").modal("hide");
 
<% end %>