<%= form_with(model: restaurant, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

 
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= form.label :name, "Nom", class: "required" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
        </div>
       </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :phone, "Téléphone" %>
          <%= form.text_field :phone, class: "form-control", placeholder: "Téléphone" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :city, "Ville", class: "required"  %>
          <%= form.text_field :city, class: "form-control", placeholder: "Ville" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :country, "Pays", class: "required" %>
          <%= form.text_field :country, class: "form-control", placeholder: "Pays", required: true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= form.label :address, "Adresse", class: "required" %>
          <%= form.text_field :address, class: "form-control", placeholder: "Adresse", required: true %>
        </div>
        <div class="form-group">
          <%= form.label :description, "Description" %>
          <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
        </div>
      </div>
    </div>

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
