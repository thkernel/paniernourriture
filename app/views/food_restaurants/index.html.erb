<p id="notice"><%= notice %></p>

<h1>Food Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Food</th>
      <th>Restaurant</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_restaurants.each do |food_restaurant| %>
      <tr>
        <td><%= food_restaurant.uid %></td>
        <td><%= food_restaurant.food_id %></td>
        <td><%= food_restaurant.restaurant_id %></td>
        <td><%= food_restaurant.status %></td>
        <td><%= link_to 'Show', food_restaurant %></td>
        <td><%= link_to 'Edit', edit_food_restaurant_path(food_restaurant) %></td>
        <td><%= link_to 'Destroy', food_restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

