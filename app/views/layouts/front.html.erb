<!DOCTYPE html>
<html>
  <head>
     <% if controller_name == "front" && action_name == "home" %>
      <%= display_meta_tags site: "#{APPLICATION_NAME} | #{APPLICATION_SLOGAN}", charset: "utf-8" %>
      <% else %>
         <%= display_meta_tags site: APPLICATION_NAME, charset: "utf-8", og: { site_name: "#{APPLICATION_NAME}", type: 'website' } %>
    <% end %>

    <meta property="og:image" content="<%= meta_image %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render('layouts/partials/front/header') %>
    <%= yield %>
    <%= render('layouts/partials/front/footer') %>
  </body>
</html>
